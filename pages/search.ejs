<% layout('main_form/page') -%>

<% block('title', 'Search'); -%>

<form action="/get_search" method="post">

	<table class="table_blur">
		<tr><td>Name:</td><td><input type="text" name="name" required></td></tr>
	</table>
	<p><button type="submit">Search</button></p>

</form>

<br>

<table class="table_blur">
<tr>
	<th>Full Name</th>
	<th>Short name</th>
	<th>Section №</th>
	<th>Shelf №</th>
	<th>Weight</th>
	<th>Size</th>	
	<th>Date in</th>
	<th>Date out</th>
	<% rows.forEach((row)=> { %>
	<tr> 
		<td><%=row.name_full %></td>
		<td><%=row.name_short %></td>
		<td><%=row.section_number %></td>
		<td><%=row.shelf_number  %></td>
		<td><%=row.weight %></td>
		<td><%=row.sizes %></td>
		<td><%=row.date_in %></td>
		<td><%=row.date_out %></td>

	</tr>
	<% }); %> 

</tr>
</table>